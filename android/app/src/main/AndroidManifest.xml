<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.video_gallery_app"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 🛡️ Permissões necessárias - CORRIGIDO para diferentes versões do Android -->

    <!-- Para Android 12L (API 32) e anteriores -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Para Android 13 (API 33) e superiores -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Para Android 14+ se você quiser acesso parcial (opcional) -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />

    <!-- MANAGE_EXTERNAL_STORAGE apenas se realmente necessário -->
    <!-- ATENÇÃO: Esta permissão é restrita no Google Play Store -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- Para compatibilidade com versões antigas -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- 🖼️ Consulta de apps externos -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
        <!-- 🔗 Garante que o open_file funcione -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="video/*" />
        </intent>
        <!-- Adicionado para melhor compatibilidade -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:mimeType="video/*" />
        </intent>
    </queries>

    <application
        android:label="Video Gallery"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/LaunchTheme"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name="com.example.video_gallery_app.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- 🎨 Tema aplicado durante início do app -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- 🚀 App launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ⚙️ Flutter plugin system -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>
